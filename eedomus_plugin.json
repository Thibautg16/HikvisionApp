{
    "plugin_id": "hikvisionapps",
    "name_fr": "Hikvision Apps",
    "icon": "camera.png",
    "version": "1.0",
    "creation_date": "2017-09-30",
    "modification_date": "2017-09-30",
    "author": "@Thibautg16",
    "description_fr": "Contrôlez votre caméra Hikvision à partir de son API",
    "description_en": "Control your Hikvision camera from its API",
    "forum_link": "",
    "parameters":
        [
            {
                "parameter": "ip",
                "desctiption": "Adresse IP de votre caméra",
                "xtype": "textfield",
                "default_value": "192.168.0.10",
                "field": "width:130, allowBlank:false, maskRe:/[0-9.]/, regex:/^(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9])\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[1-9]|0)\\.(25[0-5]|2[0-4][0-9]|[0-1]{1}[0-9]{2}|[1-9]{1}[0-9]{1}|[0-9])$/, regexText:'Adresse IP invalide [0-255].[0-255].[0-255].[0-255]'"
            },
            {
                "parameter": "login",
                "desctiption": "Login de votre caméra",
                "xtype": "textfield",
                "field": "width:130, allowBlank:false"
            },
            {
                "parameter": "password",
                "desctiption": "Password de votre caméra",
                "xtype": "textfield",
                "field": "width:130, allowBlank:false"
            }
        ],
    "devices":
        [
            {
                "device_id": "hikaction",
                "module_id": "41",
                "type": "http",
                "name_fr": "plugin.name",
                "icon": "",
                "utilisation_id":"43",
                "parameters":
                    {
				        "VAR1": "plugin.parameters.ip",
				        "VAR2": "plugin.parameters.login",
                        "VAR3": "plugin.parameters.password",
                        "value_type": "list",
                        "ignore_errors": 3,
                        "RAW_URL": "",
                        "RAW_XPATH": "",
                        "POLLING": "0"
                    },
                "values":
                    [
                        {
                            "value" : "1",
                            "description": "Détection activée",
                            "icon": "camera_on.png",
                            "http_url": "http://[VAR2]:[VAR3]@[VAR1]/MotionDetection/1",
                            "http_type": "PUT",
                            "http_params": ""
                        },
                        {
                            "value" : "2",
                            "description": "Détection désactivée",
                            "icon": "camera_off.png",
                            "http_url": "http://[VAR2]:[VAR3]@[VAR1]/MotionDetection/1",
                            "http_type": "PUT",
                            "http_params": ""
                        }
                    ]
            }
        ]
}